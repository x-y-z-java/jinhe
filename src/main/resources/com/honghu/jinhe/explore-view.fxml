<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.honghu.jinhe.ExploreController">
    <stylesheets>
        <URL value="@/styles.css" />
    </stylesheets>

    <!-- 修改点：移除百分比值 -->
    <ImageView fx:id="backgroundImage" preserveRatio="false">
        <image>
            <Image url="@/images/main-bg.jpg" />
        </image>
    </ImageView>

    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(236, 240, 241, 0.9); -fx-background-radius: 10; -fx-padding: 30;">
        <Label text="探索功能" textFill="#2E86C1">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <Label text="欢迎来到探索页面！这里有很多有趣的功能等着您发现。" wrapText="true" textAlignment="CENTER" />

        <VBox alignment="CENTER_LEFT" spacing="10">
            <Label text="✓ 功能一：数据分析" />
            <Label text="✓ 功能二：图表展示" />
            <Label text="✓ 功能三：设置配置" />
            <Label text="✓ 功能四：用户管理" />
        </VBox>

        <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackButtonClick" text="返回欢迎页" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" />
    </VBox>

</StackPane>